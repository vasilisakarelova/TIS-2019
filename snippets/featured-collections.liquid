<!-- snippets/featured-collections.liquid -->

<div class="featured-collections" style="display: none">
  <div class="featured-collections--item">
    <div class="featured-collections--item-image">
      {% if settings.featured_collection_1 != blank %}
        <img src="{{ collections[settings.featured_collection_1].image.src | img_url: '1400x' }}" />
      {% endif %}
      {% if settings.featured_collection_product_1 != blank %}
        <img class="product" src="{{ all_products[settings.featured_collection_product_1].featured_image.src | img_url: '1400x' }}" />
      {% endif %}
      {% if settings.featured_collection_blog_1 != blank %}
        <img src="{{ collections[settings.collection_1].image.src | img_url: '1400x' }}" />
      {% endif %}
    </div>
    <div class="featured-collections--item-title">{{ settings.featured_collection_title_1 }}</div>
    <div class="featured-collections--item-desc">{{ settings.featured_collection_description_1 }}</div>
    <div class="featured-collections--item-link">
      {% if settings.featured_collection_1 != blank %}
        <a href="{{ collections[settings.featured_collection_1].url }}">{{ settings.featured_collection_link_1 }}</a>
      {% endif %}
      {% if settings.featured_collection_product_1 != blank %}
        <a href="{{ all_products[settings.featured_collection_product_1].url }}">{{ settings.featured_collection_link_1 }}</a>
      {% endif %}
      {% if settings.featured_collection_blog_1 != blank %}
        <a href="{{ articles[settings.featured_collection_blog_1].url }}">{{ settings.featured_collection_link_1 }}</a>
      {% endif %}
    </div>
  </div>

  <div class="featured-collections--item">
    <div class="featured-collections--item-image">
      {% if settings.featured_collection_2 != blank %}
        <img src="{{ collections[settings.featured_collection_2].image.src | img_url: '1400x' }}" />
