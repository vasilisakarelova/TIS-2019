        <img src="{{ articles[settings.featured_collection_blog_2].image.src | img_url: '1400x' }}" />
      {% endif %}
    </div>
    <div class="featured-collections--item-title">{{ settings.featured_collection_title_2 }}</div>
    <div class="featured-collections--item-desc">{{ settings.featured_collection_description_2 }}</div>
    <div class="featured-collections--item-link">
      {% if settings.featured_collection_2 != blank %}
        <a href="{{ collections[settings.featured_collection_2].url }}">{{ settings.featured_collection_link_2 }}</a>
      {% endif %}
      {% if settings.featured_collection_product_2 != blank %}
        <a href="{{ all_products[settings.featured_collection_product_2].url }}">{{ settings.featured_collection_link_2 }}</a>
      {% endif %}
      {% if settings.featured_collection_blog_2 != blank %}
        <a href="{{ articles[settings.featured_collection_blog_2].url }}">{{ settings.featured_collection_link_2 }}</a>
      {% endif %}
    </div>
  </div>
</div>
